{
  "functions": {
    "api/vision.js": { "maxDuration": 120 },
    "api/design/inspire.js": { "maxDuration": 180 },
    "api/design/generate.js": { "maxDuration": 300 },
    "api/design/qa.js": { "maxDuration": 120 },
    "api/**/*": { "maxDuration": 60 }
  },
  "rewrites": [
    { "source": "/api/vision-fast", "destination": "/api/vision?mode=FAST" },
    { "source": "/api/layout/hk", "destination": "/api/vision?mode=LAYOUT_HK" },
    { "source": "/api/design/render", "destination": "/api/design/inspire" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}
